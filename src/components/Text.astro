---
import { cn } from "@/lib/utils";

export interface Props {
  /** Typography variant */
  variant?: "h1" | "h2" | "h3" | "p";
  /** Additional CSS classes */
  class?: string;
}

const { variant = "p", class: className, ...attrs } = Astro.props;

const variants = {
  h1: {
    tag: "h1",
    class: "text-mobile-h1 lg:text-h1 text-primary font-body",
  },
  h2: {
    tag: "h2",
    class: "text-mobile-h2 lg:text-h2 text-primary font-body",
  },
  h3: {
    tag: "h3",
    class: "text-mobile-h3 lg:text-h3 text-primary font-body",
  },

  p: {
    tag: "p",
    class: "text-mobile-p lg:text-p text-primary font-body",
  },
};

const Tag = variants[variant].tag as keyof HTMLElementTagNameMap;
---

<Tag class={cn(variants[variant].class, className)} {...attrs}>
  <slot />
</Tag>
