---
import { cn } from "@/lib/utils";

type Props = {
  variant?: "white" | "light" | "dark" | "green";
  class: string
};
const { variant = "light", class: className, } = Astro.props;

const variants = {
  white: "bg-white text-dark",
  light: "bg-accent text-dark",
  dark: "bg-primary text-white",
  green: "bg-secondary text-black",
};
---

<article class={cn(variants[variant], className, "p-12 rounded-[45px] border border-black shadow-[0px_5px_1px_rgba(0,0,0,1)]")}>
  <slot />
</article>
