---
import "@/styles/global.css";
import Link from "@/components/ui/Link.astro";
import Text from "@/components/ui/Text.astro";
import Card from "@/components/ui/Card.astro";
import Wrapper from "@/components/ui/Wrapper.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- <meta name="generator" content={Astro.generator} /> -->
    <title>Astro + TailwindCSS - Dev Components</title>
  </head>

  <body class="font-body">
    <div class="flex flex-col items-center gap-30 mt-10 mb-10">
      <div class="flex flex-col gap-2 bg-blue-200 p-5 rounded-xl">
        <span>Typography</span>
        <div class="flex flex-col gap-2 mb-10">
          <Text variant="h1">This is a h1</Text>
          <Text variant="h2">This is a h2</Text>
          <Text variant="h3">This is a h3</Text>
        </div>
        <span>Typography with background</span>
        <div class="flex flex-col gap-2">
          <Text variant="h1" highlight="green">
            This is a header with green background
          </Text>
          <Text variant="h1" highlight="white">
            This is a header with white background
          </Text>
        </div>
      </div>

      <div class="flex flex-col items-center gap-5 bg-blue-200 p-5 rounded-xl">
        <span>Buttons</span>
        <div class="flex gap-2">
          <Link variant="default">Default</Link>
          <Link variant="secondary">Secondary</Link>
          <Link variant="outlined">Outlined</Link>
        </div>
        <span>Ghost Primary</span>
        <div class="flex gap-2">
          <Link variant="ghostPrimary" color="dark">Ghost Primary Dark</Link>
          <Link variant="ghostPrimary" color="white">Ghost Primary White</Link>
        </div>
        <span>Ghost secondary</span>
        <div class="flex gap-2">
          <Link variant="ghostSecondary" color="dark">Ghost Secondary Dark</Link
          >
          <Link variant="ghostSecondary" color="white"
            >Ghost Secondary White</Link
          >
          <Link variant="ghostSecondary" color="main">Ghost Secondary Main</Link
          >
        </div>
      </div>
      <div class="flex flex-col items-center gap-5 bg-blue-200 p-5 rounded-xl">
        <span>Cards</span>
        <div class="flex gap-2">
          <Card variant="light">
            Lorem ipsum dolor sit, amet consectetur adipisicing elit. Laborum
            recusandae cumque deleniti reiciendis distinctio molestias magnam
            repellat suscipit nemo consequatur commodi maiores, unde asperiores
            repudiandae fuga aut alias expedita mollitia?
          </Card>
          <Card variant="dark">
            Lorem ipsum dolor sit, amet consectetur adipisicing elit. Laborum
            recusandae cumque deleniti reiciendis distinctio molestias magnam
            repellat suscipit nemo consequatur commodi maiores, unde asperiores
            repudiandae fuga aut alias expedita mollitia?
          </Card>
          <Card variant="green">
            Lorem ipsum dolor sit, amet consectetur adipisicing elit. Laborum
            recusandae cumque deleniti reiciendis distinctio molestias magnam
            repellat suscipit nemo consequatur commodi maiores, unde asperiores
            repudiandae fuga aut alias expedita mollitia?
          </Card>
        </div>
      </div>
      <div class="flex flex-col gap-10 items-center bg-blue-200 p-5 rounded-xl">
        <span>Wrappers</span>

        <div class="flex gap-10">
          <Wrapper variant="light">
            <Text variant="h1">This is a h1</Text>
          </Wrapper>
          <Wrapper variant="dark">
            <Text variant="h1">This is a h1</Text>
          </Wrapper>
        </div>
      </div>
    </div>
  </body>
</html>
